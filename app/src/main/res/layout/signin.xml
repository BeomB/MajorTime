<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f5ff">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/s"
        android:text="회원가입"
        android:textSize="35sp"
        android:layout_marginTop="100dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/Sign_name"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:hint="이름 : "
        android:layout_gravity="center_horizontal"
        android:background="@drawable/line_sign"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/Sign_email"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:hint="이메일 : "
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/line_sign"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/Sign_id"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:hint="아이디 : "
            android:paddingLeft="10dp"
            android:background="@drawable/line_sign"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/Sign_CKid"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/line_solve"
            android:text="중복확인"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6495ED"/>
    </LinearLayout>



    <EditText
        android:id="@+id/Sign_pw"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:hint="비밀번호 : "
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/line_sign"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/Sign_CKpw"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:hint="비밀번호 확인 : "
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/line_sign"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/SignIn_Success_Btn"
        android:layout_marginTop="20dp"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#6495ED"
        android:text="회원가입"
        android:background="@drawable/line_solve"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>



</LinearLayout>