<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f5ff">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/signtext"
            android:layout_width="1dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/s"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:text="문제 작성"
            android:textColor="#6495ED"
            android:textSize="30dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@null"
            android:fontFamily="@font/b_font"
            android:text="완 료"
            android:textColor="#6495ED"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="#5286e3" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="500dp"
            android:orientation="vertical">

            <EditText
                android:fontFamily="@font/b_font"
                android:background="@drawable/line_solve"
                android:backgroundTint="#c9ddff"
                android:id="@+id/examtitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:paddingLeft="20dp"
                android:hint="제목 작성 : " />


                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/examboki1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/line_solve"
                        android:fontFamily="@font/b_font"
                        android:hint="보기1 작성 : "
                        android:paddingLeft="20dp" />

                    <EditText
                        android:fontFamily="@font/b_font"
                        android:id="@+id/examboki2"
                        android:background="@drawable/line_solve"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"
                        android:hint="보기2 작성 : " />
                    <EditText
                        android:fontFamily="@font/b_font"
                        android:id="@+id/examboki3"
                        android:background="@drawable/line_solve"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"
                        android:hint="보기3 작성 : " />
                    <EditText
                        android:fontFamily="@font/b_font"
                        android:id="@+id/examboki4"
                        android:background="@drawable/line_solve"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"
                        android:hint="보기4 작성 : " />
                    <EditText
                        android:fontFamily="@font/b_font"
                        android:id="@+id/examboki5"
                        android:background="@drawable/line_solve"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="20dp"
                        android:hint="보기5 작성 : " />


                </LinearLayout>

            <EditText
                android:fontFamily="@font/b_font"
                android:background="@drawable/line_solve"
                android:id="@+id/examanswer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#fcd5cf"
                android:hint="정답 작성 : " />

        </LinearLayout>
    </ScrollView>


</LinearLayout>