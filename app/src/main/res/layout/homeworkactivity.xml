<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f0f5ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/s"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="과제 알리미"
            android:textColor="#6495ED"
            android:textSize="30dp" />

        <View
            android:layout_width="170dp"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/i_book"/>

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:background="#5286e3" />

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="380dp"
        android:layout_height="450dp"
        android:fillViewport="true"
        android:layout_gravity="center">

        <ListView
            android:background="@drawable/line_news"
            android:id="@+id/listview"
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="100dp"/>
    </ScrollView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">


        <Button
            android:id="@+id/refresh"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@drawable/line_solve"
            android:backgroundTint="#b0c5ff"
            android:textColor="#fff"
            android:fontFamily="@font/b_font"
            android:text="업데이트"/>

        <Button
            android:id="@+id/alarmoff"
            android:layout_marginLeft="5dp"
            android:layout_width="90dp"
            android:layout_gravity="top"
            android:layout_height="50dp"
            android:fontFamily="@font/b_font"
            android:background="@drawable/line_solve"
            android:backgroundTint="#b0c5ff"
            android:textColor="#fff"
            android:text="알람끄기"/>
        <Button
            android:id="@+id/plus"
            android:layout_marginLeft="5dp"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:fontFamily="@font/b_font"
            android:background="@drawable/line_solve"
            android:backgroundTint="#b0c5ff"
            android:textColor="#fff"
            android:text="알람추가"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
</LinearLayout>